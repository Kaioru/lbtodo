<div class="item">
    <div class="right floated content">
        <div class="ui two buttons">
            <div class="ui basic blue button" {{action "toggleModalAuthorEdit" @author}}>
                <i class="small middle aligned icon pen"></i>
            </div>
            <div class="ui basic red button" {{action "toggleModalAuthorDelete" @author}}>
                <i class="small middle aligned icon trash"></i>
            </div>
        </div>
    </div>

    <i class="large user middle aligned icon"></i>
    <div class="content">
        <a class="header">{{@author.name}}</a>
        <div class="description">Lorem ipsum dolor sit</div>
    </div>
</div>

<div class="ui modal form" id="modal-edit-author-{{@author.id}}">
  <i class="close icon"></i>
  <div class="header">
    Edit Author
  </div>
  <div class="content">
    <div class="field">
        <label>Name</label>
        {{input value=this.authorNewName}}
    </div>
  </div>
  <div class="actions">
    <button class="ui black deny button">
      Cancel
    </button>
    <button class="ui positive right button" {{action "updateAuthor" @author}}>
      Update
    </button>
  </div>
</div>

<div class="ui modal form" id="modal-delete-author-{{@author.id}}">
  <i class="close icon"></i>
  <div class="header">
    Delete Author
  </div>
  <div class="content">
    <p>Are you sure you would like to delete '{{@author.name}}'?</p>
  </div>
  <div class="actions">
    <button class="ui black deny button">
      Cancel
    </button>
    <button class="ui negative right button" {{action "deleteAuthor" @author}}>
      Delete
    </button>
  </div>
</div>

<div class="ui modal form" id="modal-error-author-{{@author.id}}">
  <i class="close icon"></i>
  <div class="header">
    Error!
  </div>
  <div class="content">
    <p>Failed to update Author due to..</p>
    <p>{{this.authorError}}</p>
  </div>
  <div class="actions">
    <button class="ui black deny button">
      Ok
    </button>
  </div>
</div>